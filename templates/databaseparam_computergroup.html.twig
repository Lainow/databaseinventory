{% import "components/form/fields_macros.html.twig" as fields %}
{% set rand = random() %}

{% block more_fields %}
    {% if canadd %}
        <form method='POST' enctype='multipart/form-data' action=''>
            <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}" />
            <div class="d-flex">
                {{ fields.dropdownField(
                    compgroupclass,
                    'plugin_databaseinventory_computergroups_id',
                    '',
                    __('Add'),
                    {
                        'used': used,
                    }
                ) }}

                {% set btn_add %}
                    <button class="btn btn-primary" type="submit" name="add_computergroup" value="1">
                        <i class="fas fa-plus"></i>
                        <span>{{_x('button', 'Add') }}</span>
                    </button>
                {% endset %}

                {{ fields.htmlField(
                    '',
                    btn_add,
                    ''
                ) }}

                {{ fields.hiddenField(
                    'plugin_databaseinventory_databaseparams_id',
                    item.getID(),
                )}}
            </div>
        </form>
    {% endif %}
    {% if canread %}
        {% if compgrouplist is not empty %}
            <form name="massaction_{{ rand }}" id="massaction_{{ rand }}" method="post"
            action="{{ path('/front/massiveaction.php') }}" data-submit-once>
            <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}" />
            <input type="hidden" name="action" value="purge">
            <input type="hidden" name="action_name" value="purge">
            <input type="hidden" name="processor" value="MassiveAction">
                {% set table_id = 'package_subitem_' ~ rand %}
                <table class="search-results table table-hover table-card" id="{{ table_id }}">
                    <thead>
                        <tr>
                            {% if canedit %}
                                <th style="width: 32px;">
                                    <input class="form-check-input" type="checkbox" id="checkall_{{ rand }}"
                                        value="" title="{{ __('Check all as') }}"
                                        data-bs-toggle="tooltip"
                                        onclick="checkAsCheckboxes('checkall_{{ rand }}', '{{ table_id }}');" />
                                </th>
                            {% endif %}
                            <th>{{ __('Name') }}</th>
                            <th>{{ __('Comment') }}</th>
                            <th>{{ __('Number of dynamic items') }}</th>
                            <th>{{ __('Number of static items') }}</th>
                        </tr>
                    </thead>
                    {% for compgroup in compgrouplist %}
                        <tr>
                            {% if canedit %}
                                <td>
                                    {% set checked = session('glpimassiveactionselected')[dbparamgroupclass][compgroup['iddbparamcgroup']] ?? false %}
                                    <input type="checkbox" class="form-check-input"
                                        name="items[{{ dbparamgroupclass }}][{{ compgroup['iddbparamcgroup'] }}]"
                                        data-glpicore-ma-tags="common"
                                        value="{{ compgroup['iddbparamcgroup'] }}"
                                        {% if checked %}checked="checked"{% endif %}>
                                </td>
                            {% endif %}
                            <td><a href = {{compgroup['link']}}> {{ compgroup['name'] }}</a></td>
                            <td>{{ compgroup['comment'] }}</td>
                            <td>{{ compgroup['nbdynamicitems'] }}</td>
                            <td>{{ compgroup['nbstaticitems'] }}</td>
                        </tr>
                    {% endfor %}
                    <button class="btn btn-sm btn-ghost-secondary my-1 ms-1" type="submit" value="massiveaction">
                        <i class="ti ti-corner-left-down mt-1"></i>
                        <span>{{ __("Remove") }}</span>
                    </button>
                </table>
            </form>
        {% endif %}
    {% endif %}
{% endblock %}